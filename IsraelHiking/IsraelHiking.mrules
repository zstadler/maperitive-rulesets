	target : peak
		define
			fill-color : black
			line-style : none
			min-zoom : 13
			shape : circle
			shape-size : 11:2;15:3
		draw : shape
		define
			font-family : Cambria
			font-style : italic
			font-weight : bold
			font-size : 13:10;15:16
			min-zoom : 13
			text-color : black
			text-max-width : 15
			text-halo-width : 30%
			text-halo-opacity : 0.75
		for : ele
			define
				text : ele
				text-align-horizontal : far
				text-align-vertical : center
				text-offset-vertical : 20%
				text-offset-horizontal : -70%
			draw : text
		for : name
			define
				text : name
				text-align-vertical : far
				text-align-horizontal : center
				text-offset-vertical : -70%
				text-offset-horizontal : 0
			draw : text

	target : water *
		define
			shape : circle
			shape-size : 4
			line-color : blue
			line-style : solid
			line-width: 2
			min-zoom : 12
			fill-opacity : 0
		if : water spring
			define
				fill-color : blue
				fill-opacity : 100%
				line-style : none
		draw : shape
		define
			text-color : blue
			min-zoom : 12
			font-size : 12:12;14:14;15:15
			text-max-width : 10
			text-offset-vertical : 150%
			text-align-vertical : far
		draw : text
	target : water well
		define
			shape : circle
			shape-size : 1.5
			line-style : none
			min-zoom : 12
			fill-color : blue
		draw : shape

